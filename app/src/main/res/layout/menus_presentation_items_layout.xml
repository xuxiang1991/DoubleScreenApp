<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:text="@string/shop_car_code"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:singleLine="true"
            android:text="@string/shop_car_goods_name"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:text="@string/shop_car_unit_money"
            android:textColor="#212121"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvhot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:text="冷"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvsize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:singleLine="true"
            android:text="中杯"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvcount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="21.33dp"
            android:text="x 8"
            android:textColor="#212121"
            android:textSize="16sp"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="#E9EBEC" />
</LinearLayout>
