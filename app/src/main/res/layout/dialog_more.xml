        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:alpha="0.5"
            android:padding="15dp"
            android:text="更多功能"
            android:textColor="@color/ui_new_txt_content_normal"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_booltooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:alpha="0.5"
                    android:padding="15dp"
                    android:text="连接热敏打印机"
                    android:textColor="#FC5346"
                    android:background="@color/grey_bg"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_below="@id/tv_des"
            android:layout_marginTop="13.33dp"
            android:background="#CEDADD" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/line1"
            android:background="@drawable/pay_dialog_button_bg"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@null"
                android:text="@string/tips_cancel"
                android:textColor="#000000"
                android:textSize="18sp" />

