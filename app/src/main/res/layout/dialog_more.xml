                <!--android:background="@null"-->
                <!--android:text="@string/fruit_sure"-->
                <!--android:textColor="#FC5346"-->
                <!--android:textSize="18sp" />-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
