<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/common_red_main"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/title_bg_selector"
        android:padding="@dimen/common_gap_large"
        android:scaleType="center"
        android:src="@drawable/top_title_back_bg_normal" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/font_white_large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/common_gap_large"
        android:textSize="20sp" />

</LinearLayout>