<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_bg" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/img_logo" />

    <LinearLayout
        android:id="@+id/ll_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:src="@drawable/select_hot" />

        <ImageView
            android:id="@+id/img_ice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/select_ice" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_busness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:src="@drawable/image_card_love" />

        <ImageView
            android:id="@+id/img_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/img_card_business" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="180dp"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/img_card_select" />

        <TextView
            android:id="@+id/tv_drink_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="170dp"
            android:text="经济醇香型\n珍珠奶茶"
            android:textColor="@color/gray_item_title"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon_back" />

    <RelativeLayout
        android:id="@+id/rl_drink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_1"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_2"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_3"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_4"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_6"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_5"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_7"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_6"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_8"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_7"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_9"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_10"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_2"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_11"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_3"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_12"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_4"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_13"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_5"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_14"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_6"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_15"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_7"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_16"
            android:layout_width="114dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@id/iv_8"
            android:layout_marginRight="5dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/img_card_back"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>